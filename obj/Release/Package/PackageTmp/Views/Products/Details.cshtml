@model BookStore.Models.Products
@using BookStore.Helpers;
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}



<div style="margin:0 30px 0 30px;">
    <br />
    <h2>Details: @Model.ProductName</h2>
    <h4>Products</h4>
    <table class="table">
        <tr>
            <th>Product Name</th>
            <th>Catergory</th>
            <th>Manufacture</th>
            <th>Vehicle Model</th>
            <th>Part Price </th>
            <th>Description </th>
            <th></th>
        </tr>
        <tr>
            <td> @Html.DisplayFor(modelItem => Model.ProductName) </td>
            <td>@Html.DisplayFor(modelItem => Model.ProductCatergory.CatergoryName) </td>
            <td>@Html.Raw(ViewHelper.getVManufacture(Guid.Parse(Model.vManufactureKey))) </td>
            <td>@Html.Raw(ViewHelper.getVehicleModel(Guid.Parse(Model.vModelKey))) </td>
            <td> @Html.DisplayFor(modelItem => Model.ProductPrice) </td>
            <td> @Html.Raw(Model.ProductDescription) </td>
        </tr>


    </table>
</div>
@if (User.IsInRole("Admin"))
{
<p>
    @Html.ActionLink("Modify", "Edit", new { id = Model.ProductId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
}
else
{
    <hr style="width:90%"/>
   <input type="button" value="Back" onclick="window.history.back()" class="dropbtn"  style="border-radius:4px;cursor:pointer; margin-left:30px;" />
}

<br />
