@model IEnumerable<BookStore.Models.Products>
@using BookStore.Helpers;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<div style="margin:0 30px 0 30px;">
    <h2>Index</h2>

    <p class="AddLinkTab">
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>Catergory</th>
            <th>Vehicle Model</th>
            <th>Part Name </th>
            <th>Part Price </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ProductCatergory.CatergoryName) </td>
                <td>@Html.Raw(item.vModelKey !=null?ViewHelper.getVehicleModel(Guid.Parse(item.vModelKey)):"N/A") </td>
                <td> @Html.DisplayFor(modelItem => item.ProductName) </td>
                <td> @Html.DisplayFor(modelItem => item.ProductPrice) </td>
                <td>
                    @Html.ActionLink("Modify", "Edit", new { id = item.ProductId }) |
                    @Html.ActionLink("Info", "Details", new { id = item.ProductId }) |
                    @Html.ActionLink("Remove", "Delete", new { id = item.ProductId })
                </td>
            </tr>
        }

    </table>
</div>