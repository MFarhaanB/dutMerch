@model IEnumerable<BookStore.Models.ApplicationUser>

@{
    ViewBag.Title = "Manage User Roles";
}




<div style="margin:0 0 0 0;">

    <div class="c_c" style="background-color: none; margin:10px 0 60px 150px; max-width:1200px;">
        <p class="text-success">Manage User Roles</p>
        <br />
        <h2 class="AddLinkTab" style="margin-top:5px">Manage User Roles</h2>
        <br />
        <h3 class="AddLinkTab">Assign A Driver Or Admin Here</h3>
        <hr />
        <br />
        <div class="panel panel-default" style="background-color: none">
            <div class="panel-heading" style="background-color: none" ;> <h1>Assign A Driver Or Admin Here</h1></div>
            <div class="panel-body">
                @*<hr />*@
                <br />

                <dl class="dl-horizontal">
                    <dd>
                        <div class="square">
                            <table class="table">
                                <tr>
                                    <th>
                                        @Html.DisplayName("Account Name")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Role")
                                    </th>
                                </tr>

                                @foreach (var item in Model.Where(x => x.UserName != "admin@appdev.com"))
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UserName)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Assign Role", "Edit", new { id = item.Id })
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>



















